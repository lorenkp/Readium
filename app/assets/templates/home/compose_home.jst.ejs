<div data-accordion class="editor">
	
<div data-control class="toggle-open compose-header">
  <img class="avatar" src="<%= user.get('url') %>">
  <span id="user-name"><%= user.escape('username') %></span>
  <span id="write-here">Write here...</span>
</div>
<div data-content>
<div id="editable">
  <div class="editable compose-home"></div>
  <div class="compose-buttons">
    <button type="submit" id="publish">Publish</button>
    <div class="create-box"></div>
  </div>
</div>
	
</div>
</div>
<script type="text/javascript">
  $('.editor').accordion()
</script>
