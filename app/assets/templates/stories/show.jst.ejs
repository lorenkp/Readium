<style>
.background-image {
  background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(<%= story.get('header_url') %>);
  background-size: cover;
  height: 86vh;
  background-position: center;
  margin-bottom: 80px;
}
</style>
<div class="background-image">
  <div class="title">
  <% if (story.get('title') !== 'undefined') { %>
    <h1 class="story-title-show"><%= story.get('title') %></h1>
 <% } %> 
  </div>
</div>
<div class="story-body-show">
  <div class="article">
    <%= story.get( 'body') %>
  </div>
  <div class="tagged-in">TAGGED IN</div>
  <div class="featured-tags show">
  <% story.tags().each(function(tag) { %>
     <a href="#tags/<%= tag.id %>"><%= tag.escape('name') %></a>
  <% }) %>
  </div>
  <div class="author-blurb">
    <a class="avatar-link" href="#users/<%= story.escape('author_id') %>">
    <img class="avatar show" src="<%= story.get('avatar_url') %>"> 
    </a>
    <span class="author-show-text"><%= story.escape('username') %></span>
  </div>
  <div class="responses-header">
      <div class="responses-header-text">RESPONSES</div>
  </div>
  <div class="editor"></div>
  <div class="responses-container"></div>
  <div class="placeholder"></div>
</div>
<div id="footer">
  <a href="#users/<%= story.get('author_id') %>">
  <div class="author-info">
    <img class="avatar-footer" src="<%= story.get('avatar_url') %>">
    <div class="author-time">
      <div class="author-name"><%= story.get('username') %></div>
      <div class="timeago" title="<%= story.get('created_at') %>"></div>
    </div>
  </div>
</a>
</div>
