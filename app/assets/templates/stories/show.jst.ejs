<%  $(document).ready(function() { %>
<style>
.background-image {
background:
linear-gradient(
rgba(0, 0, 0, 0.5),
rgba(0, 0, 0, 0.5)
),
url(<%= story.get('header_url') %>);
background-size: cover;
height: 86vh;
background-position: center;
margin-bottom: 80px;
}
</style>
<div class="background-image">
  <div class="title">
    <h1 class="story-title-show"><%= story.get('title') %></h1>
  </div>
</div>
<div class="story-body-show">
  <div class="article">
    <%= story.get('body') %>
  </div>
</div>
<% }); %>